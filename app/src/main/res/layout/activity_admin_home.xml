<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_french_fries"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ></ImageView>


    <Button


        android:id="@+id/profile_btn"
        android:layout_below="@id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/input_design">

    </Button>


    <Button
        android:id="@+id/setting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/input_design"
        android:layout_below="@+id/profile_btn">

    </Button>


    <Button
        android:id="@+id/add_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Add menu"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:background="@drawable/input_design"
        android:layout_below="@+id/setting_btn">

    </Button>


    <Button
        android:id="@+id/your_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Your menu"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:background="@drawable/input_design"
        android:layout_below="@+id/add_menu_btn">

    </Button>

    <Button
        android:id="@+id/order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Order"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:background="@drawable/input_design"
        android:layout_below="@id/your_menu_btn"
        ></Button>

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="LogOut"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:background="@drawable/input_design"
        android:layout_below="@id/order_btn"
        ></Button>
</RelativeLayout>