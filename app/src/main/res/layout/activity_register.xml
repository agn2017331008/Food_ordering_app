<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_logo"
        android:src="@drawable/ic_french_fries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="30dp"

        ></ImageView>

    <EditText
        android:id="@+id/register_name_input"
        android:layout_below="@+id/register_logo"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:hint="Name"
        android:inputType="text"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"
        ></EditText>
    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_below="@+id/register_name_input"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"
        ></EditText>
    <EditText
        android:id="@+id/register_password_input"
        android:layout_below="@+id/register_phone_number_input"
        android:background="@drawable/input_design"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:hint="Password"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content"></EditText>

    <Button
        android:id="@+id/register_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20dp"
        ></Button>

</RelativeLayout>